@model klaravictor.Models.RvspModel

<div id="qbootstrap-started" class="qbootstrap-bg" data-section="rsvp" data-stellar-background-ratio="0.5" style="background-image: url(~/images/cover_bg_1.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2">
                <div class="col-md-12 text-center section-heading svg-sm colored">
                    <img src="~/images/flaticon/svg/005-two.svg" class="svg" alt="Free HTML5 Bootstrap Template by QBootstrap.com">
                    <h2>OSA</h2>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1 subtext">
                            <h3>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row animate-box">
            <div class="col-md-10 col-md-offset-1">
                @using (Html.BeginForm("Index", "Page", FormMethod.Post))
                {
                    <div class="col-md-6 form-line">
                        <div class="form-group">
                            <label for="exampleInputUsername">Anmälan</label>
                            @Html.TextBoxFor(m => m.Name, new {placeholder = "Ditt namn", @class = "form-control", @required = true})
                        </div>
                        <div class="form-group">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(m => m.Attending, true, new { name = "optradio", @required = true}) Jag kommer
                            </label>
                            <label class="radio-inline">
                                < @Html.RadioButtonFor(m => m.Attending, false, new { name = "optradio", @required = true })Kan tyvärr inte komma
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new {placeholder = "Din e-post", @class = "form-control", @required = true} )
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.FoodInfo, new { style = "width: 100%; height: 150px;", @class="form-control", id="description", placeholder= "Specialkost eller allergier?" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="stay">Boende</label>
                            @Html.DropDownListFor(m => m.Accommondation, new List<SelectListItem>
                            { new SelectListItem{Text="Familjestuga", Value="Familjestuga"},
                                new SelectListItem{Text="Campingstuga", Value="Campingstuga"},
                                new SelectListItem{Text="Friluftsbod", Value="Friluftsbod"},
                                new SelectListItem{Text="Eget boende", Value="Eget boende"}}, "Typ av boende", new { @class = "form-control", @required = true })
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.NumberOfNights, new List<SelectListItem>
                            { new SelectListItem{Text="1", Value="1"},
                                new SelectListItem{Text="2", Value="2"},
                                new SelectListItem{Text="3", Value="3"}}, "Antal nätter", new { @class = "form-control", @required = true })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Comment, new { style = "width: 100%; height: 150px;", @class="form-control", id="description", placeholder="Kommentar / önskemål"})
                        </div>
                        <div>
                            <button type="submit" class="btn btn-default" value="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>OSA</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
